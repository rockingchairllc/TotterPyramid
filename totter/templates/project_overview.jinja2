{% extends "project_base.jinja2" %}
{% set active_page = "overview" %}

{% block scripts %}
{% endblock %}
{% block project_body %}
<div class="project_description">
    <h2>Description</h2>
    <p>
        {{project.description}}
    </p>
</div><!-- .project_description -->

<ul class="project_updates">
    <h2>Updates</h2>
    {% for event in events %}
    <li {% if loop.first %}class="first_update"{% endif %}{% if loop.last %}class="last_update"{% endif %}>
        <span class="project_update_date">{{event.when}}</span><br />
        {% if event.type=="add_comment" %}
        {{event.data['commenter_first']}} {{event.data['commenter_last']}} 
            commented on
            {{event.data['idea_first']}} {{event.data['idea_last']}}'s <a href="{{event.data['comment_uri']}}">idea.</a>
        {% elif event.type=="add_idea" %}
        {{event.data['idea_first']}} {{event.data['idea_last']}} posted a 
            <a href="{{event.data['idea_uri']}}">new idea.</a>
        {% else %}
            {{event.data|pprint}}
        {% endif %}
    </li>
    {% endfor %}
</ul><!-- .project_updates -->

{% endblock %}